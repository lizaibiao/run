	<!-- 保存用户 -->
	<insert id="saveUser" parameterType="com.run.entity.UserEn">
	INSERT INTO   R_USER ( <include refid="columns"/> )
		VALUES
		(
		#{id},
		#{code},
		#{name},
		#{mobile},
		#{createTime},
		#{lastLoginTime},
		#{status}
		) 
	</insert>
